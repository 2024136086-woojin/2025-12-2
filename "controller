-> 컨트롤러 controller




class BottomNavController extends GetxController
    with GetTickerProviderStateMixin {    //----- 1
  late TabController tabController;    //----- 2
  RxInt menuIndex = 0.obs;

  @override
  void onInit() {
    super.onInit();
    tabController = TabController(length: 5, vsync: this);    //----- 3
  }

  void changeBottomNav(int index) {
    menuIndex(index);
  }
}
